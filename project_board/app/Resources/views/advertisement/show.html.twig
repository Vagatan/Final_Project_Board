{% extends 'FOSUserBundle::layout.html.twig' %}

{% block body %}
    <h1>Advertisement</h1>

    <table class="table table-striped">
        <tbody>

            <tr>
                <th>Tytuł</th>
                <td>{{ advertisement.title }}</td>
            </tr>
            <tr>
                <th>Opis</th>
                <td>{{ advertisement.description }}</td>
            </tr>
            <tr>
                <th>Kategoria</th>
                <td>{{ advertisement.category.name }}</td>
            </tr>
            <tr>
                <th>Ważne do</th>
                <td>{% if advertisement.expirationDate %}{{ advertisement.expirationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <p>Zadzwoń do ogłoszeniodawcy: {{ advertisement.user.phonenumber }}</p>

    <ul>
        <li>
            <a href="{{ path('advertisement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('advertisement_edit', { 'id': advertisement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
