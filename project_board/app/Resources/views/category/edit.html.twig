{% extends 'FOSUserBundle::layout.html.twig' %}

{% block body %}
    <h1>Edytuj kategorię</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" class="btn btn-success" role="button">
    {{ form_end(edit_form) }}

    <div class="btn-group">
            <a href="{{ path('category_index') }}" class="btn btn-primary" role="button">Wróć do listy kategorii</a>
        
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń kategorię" class="btn btn-danger" role="button">
            {{ form_end(delete_form) }}
    </div>   
{% endblock %}
